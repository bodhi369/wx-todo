/* pages/todo/todo.wxss */

.task-text {
  text-overflow: ellipsis;
}

.line {
  width: 100%;
  height: 3rpx;
  background: #DDDDDD;
}
movable-area {
  height:280rpx;
  width: 450rpx;
}

movable-view {
  width: 750rpx; 
  height:280rpx;
  z-index: 999;
  background: #fff;
}
.task-item {
  position: relative;
  background: #fff;
  z-index: 1;
}
.item-wrap {
  position: relative;
  display: flex;
  box-sizing: border-box;
  flex: 1;
  overflow: hidden;
}

.doingBtn {
  position: absolute;
  bottom: 1rpx;
  right: 150rpx; 
  width: 150rpx;
  height: 280rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 120rpx;
  background: #E66671;
  text-align: center;
} 
.doneBtn {
  position: absolute;
  bottom: 1rpx;
  right: 0; 
  width: 150rpx;
  height: 280rpx;
  background: gray;
}

.doingBtn image {
  position: absolute;
  top: 30%;
  left: 30%;
  width: 60rpx;
  height: 40rpx;
}
.doingBtn span {
  position: absolute;
  top: 35%;
  left: 28%;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 120rpx;
  text-align: center;
}


.doneBtn image {
  position: absolute;
  top: 30%;
  left: 30%;
  width: 60rpx;
  height: 40rpx;
}
.doneBtn span {
  position: absolute;
  top: 35%;
  left: 30%;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  line-height: 120rpx;
  text-align: center;
}
